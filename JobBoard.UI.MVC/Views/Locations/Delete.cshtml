@model JobBoard.Data.EF.Location

@{
    ViewBag.Title = "Confirm Delete: " + Model.StoreNumber + "—" + Model.City;
}
<br />
<h2 class="view-title">@ViewBag.Title</h2>

<div>
    <dl class="dl-horizontal detailsShape">

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ManagerId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserDetail.FullName)
        </dd>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="DELETE" style="font-weight: bold;" class="btn btn-custom-danger" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-orange"})
            </div>
        }
    </dl>


</div>
