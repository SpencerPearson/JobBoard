@model IEnumerable<JobBoard.Data.EF.Position>

@{
    ViewBag.Title = "Positions for Hire";
}
<br />
<h2 class="view-title">@ViewBag.Title</h2>


<table class="table table-striped detailsShape">
    <p class="offset-md-2 col-md-2 text-center">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </p>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th class="text-right">Edit | Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="style-link">
                <a href="@Url.Action("Details", "Positions", new { id = item.PositionId })">
                    @Html.DisplayFor(modelItem => item.Title)
                </a>
            </td>
            <td class="text-right">
                <a href="@Url.Action("Edit", "Positions", new { id = item.PositionId })">
                    <i class="icofont-edit" aria-hidden="true"></i>
                </a>
                &emsp;
                <a href="@Url.Action("Delete", "Positions", new { id = item.PositionId })">
                    <i class="icofont-bin" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
    }

</table>
